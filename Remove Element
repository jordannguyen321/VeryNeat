#include <stdio.h>

// Function prototype
int removeElement(int* nums, int numsSize, int val);

int main() {
    int nums[] = {3, 2, 2, 3};
    int val = 3;
    int numsSize = sizeof(nums) / sizeof(nums[0]);

    int newLength = removeElement(nums, numsSize, val);

    printf("New length: %d\n", newLength);
    printf("Modified array: ");
    for (int i = 0; i < newLength; i++) {
        printf("%d ", nums[i]);
    }
    printf("\n");

    return 0;
}

// Implement this function
int removeElement(int* nums, int numsSize, int val) {
    //go through array nums and remove all instances of val
    //return k elements (all other elements thats not val)
    int k = 0;
    for(int i = 0; i < numsSize; i++){
       if(nums[i] != val){
           nums[k] = nums[i]; //only saves the value we want to current K index (basically skips the "val")
           k++;
       }
    }
    return k;
}
